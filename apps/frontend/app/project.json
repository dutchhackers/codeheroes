{
  "name": "app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/frontend/app/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/frontend/app",
        "index": "apps/frontend/app/src/index.html",
        "browser": "apps/frontend/app/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/frontend/app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/frontend/app/public"
          }
        ],
        "styles": ["apps/frontend/app/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "serviceWorker": "apps/frontend/app/ngsw-config.json",
          "fileReplacements": [
            {
              "replace": "apps/frontend/app/src/environments/environment.ts",
              "with": "apps/frontend/app/src/environments/environment.prod.ts"
            }
          ]
        },
        "test": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "serviceWorker": "apps/frontend/app/ngsw-config.json",
          "fileReplacements": [
            {
              "replace": "apps/frontend/app/src/environments/environment.ts",
              "with": "apps/frontend/app/src/environments/environment.test.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/frontend/app/src/environments/environment.ts",
              "with": "apps/frontend/app/src/environments/environment.local.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4201
      },
      "configurations": {
        "production": {
          "buildTarget": "app:build:production"
        },
        "test": {
          "buildTarget": "app:build:test"
        },
        "development": {
          "buildTarget": "activity-wall:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/app/jest.config.ts",
        "tsConfig": "apps/frontend/app/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "app:build",
        "port": 4201,
        "staticFilePath": "dist/apps/frontend/app/browser",
        "spa": true
      }
    }
  }
}
