{
  "name": "github-simulator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/github-simulator/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/github-simulator",
        "main": "apps/github-simulator/src/main.ts",
        "tsConfig": "apps/github-simulator/tsconfig.app.json",
        "generatePackageJson": true,
        "platform": "node",
        "bundle": true,
        "thirdParty": true,
        "target": "node20",
        "format": ["cjs"],
        "esbuildOptions": {
          "logLevel": "info"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/github-simulator/main.cjs",
        "env": {
          "FIRESTORE_EMULATOR_HOST": "localhost:8080"
        }
      },
      "dependsOn": ["build"]
    }
  }
}
