service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUserOwner(userId) {
      // For user documents and subcollections: check if auth UID matches the uid field in the user document
      // Uses get() to fetch parent document - this is necessary because subcollections don't have
      // direct access to parent document data
      let userDoc = get(/databases/$(database)/documents/users/$(userId)).data;
      return isAuthenticated() && 
             userDoc != null &&
             userDoc.uid != null &&
             userDoc.uid == request.auth.uid;
    }
    
    // Users collection - public read for basic info, authenticated write for own data
    match /users/{userId} {
      // Allow public read access to user profiles (needed for leaderboards and activity feed)
      allow read: if true;
      
      // Allow authenticated users to update their own profile
      allow update: if isUserOwner(userId);
      
      // Prevent clients from creating or deleting users (server-only)
      allow create, delete: if false;
      
      // User subcollections
      match /connectedAccounts/{accountId} {
        // Only the user can read their connected accounts
        allow read: if isUserOwner(userId);
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /activities/{activityId} {
        // Allow public read access to activities (needed for activity feed)
        allow read: if true;
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /stats/{statId} {
        // Allow public read access to stats (needed for leaderboards)
        allow read: if true;
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /activityStats/{type} {
        // Allow public read access to activity stats (needed for leaderboards)
        allow read: if true;
        // Prevent clients from writing (server-only)
        allow write: if false;
        
        match /records/{recordId} {
          // Allow public read access to activity records (needed for leaderboards)
          allow read: if true;
          // Prevent clients from writing (server-only)
          allow write: if false;
        }
      }
      
      match /badges/{badgeId} {
        // Allow users to read their own badges and public read for showcasing
        allow read: if true;
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /achievements/{achievementId} {
        // Allow users to read their own achievements and public read for showcasing
        allow read: if true;
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /rewards/{rewardId} {
        // Only the user can read their rewards
        allow read: if isUserOwner(userId);
        // Prevent clients from writing (server-only)
        allow write: if false;
      }
      
      match /notifications/{notificationId} {
        // Only the user can read their notifications
        allow read: if isUserOwner(userId);
        // Allow users to mark notifications as read
        allow update: if isUserOwner(userId);
        // Prevent clients from creating or deleting notifications
        allow create, delete: if false;
      }
    }
    
    // Server-only collections - no client access
    match /gameActions/{actionId} {
      allow read, write: if false;
    }
    
    match /events/{eventId} {
      allow read, write: if false;
    }
    
    match /system/{docId} {
      allow read, write: if false;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
