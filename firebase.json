{
  "firestore": {
    "rules": "apps/firebase-app/firestore.rules",
    "indexes": "apps/firebase-app/firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "app",
      "public": "dist/apps/frontend/app/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "admin-portal",
      "public": "dist/apps/frontend/admin-portal/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "apps/firebase-app/storage.rules"
  },
  "functions": [
    {
      "codebase": "api",
      "source": "dist/apps/api",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "auth-service",
      "source": "dist/apps/auth-service",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "game-engine",
      "source": "dist/apps/game-engine",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "github-receiver",
      "source": "dist/apps/github-receiver",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "azure-receiver",
      "source": "dist/apps/azure-receiver",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "bitbucket-cloud-receiver",
      "source": "dist/apps/bitbucket-cloud-receiver",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    },
    {
      "codebase": "bitbucket-server-receiver",
      "source": "dist/apps/bitbucket-server-receiver",
      "runtime": "nodejs24",
      "ignore": [
        "*.local"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
